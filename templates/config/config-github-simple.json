{
  "config_version": "1.0",

  "vcs": {
    "provider": "github",
    "owner": "example-user",
    "repo": "my-project",
    "main_branch": "main",
    "auto_detect": true,
    "github": {
      "enterprise_url": null
    }
  },

  "work_tracker": {
    "provider": "github_issues",
    "auto_detect": true,
    "github_issues": {
      "enabled": true
    }
  },

  "team": {
    "review_strategy": "list",
    "default_reviewers": ["tech-lead", "senior-dev"]
  },

  "workflow": {
    "commit": {
      "auto_commit": true
    },
    "pr": {
      "auto_version_bump": true,
      "update_changelog": true,
      "draft_by_default": false
    }
  }
}
